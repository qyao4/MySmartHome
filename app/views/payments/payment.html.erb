<%# app/views/orders/payment.html.erb %>
<!-- <%= @order.inspect %> -->
<h1>Payment for Order <%= @order.id %></h1>

<div class="order-details">
  <h2>Order Summary</h2>
  <ul>
    <li>Address: <%= @order.address %></li>
    <li>City: <%= @order.city %></li>
    <li>Province: <%= Province.find(@order.province_id).name %></li>
    <li>Postal Code: <%= @order.post_code %></li>
    <li>Total Price: $<%= "%.2f" % @order.total_with_taxes %></li>
  </ul>
</div>

<div class="payment-form">
  <h2>Payment Details</h2>
  <%= form_with url: confirm_payment_path, local: true do |form| %>
    <div class="form-group">
      <%= form.label :credit_card_number, "Credit Card Number" %>
      <%= form.text_field :credit_card_number, required: true %>
    </div>

    <div class="form-group">
      <%= form.label :expiration_date, "Expiration Date (MM/YY)" %>
      <%= form.text_field :expiration_date, required: true %>
    </div>

    <div class="form-group">
      <%= form.label :cvc, "CVC" %>
      <%= form.text_field :cvc, required: true %>
    </div>

    <%= form.submit "Submit Payment", class: "submit-btn" %>
  <% end %>
</div>
