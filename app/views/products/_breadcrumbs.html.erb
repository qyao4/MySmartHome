<style>
  .breadcrumb {
    padding: 10px 15px;
    list-style: none; /* Removes default list styles */
    background-color: #f5f5f5;
    border-radius: 4px;
  }

  .breadcrumb > li + li:before {
    content: "â€º"; /* Custom separator */
    padding: 0 5px;
    color: #ccc;
  }

  .breadcrumb-item {
    display: inline-block;
  }

  .breadcrumb-item a {
    color: #0275d8; /* Hyperlink color */
    text-decoration: none;
  }

  .breadcrumb-item.active {
    color: #555; /* Active item color */
    pointer-events: none;
    cursor: default;
  }

  .breadcrumb-item:hover a {
    text-decoration: underline;
  }
</style>

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <% @breadcrumbs.each_with_index do |breadcrumb, index| %>
      <li class="breadcrumb-item <%= 'active' if index == @breadcrumbs.size - 1 %>">
        <% if breadcrumb[:url] && index < @breadcrumbs.size - 1 %>
          <%= link_to breadcrumb[:title], breadcrumb[:url] %>
        <% else %>
          <%= breadcrumb[:title] %>
        <% end %>
      </li>
    <% end %>
  </ol>
</nav>